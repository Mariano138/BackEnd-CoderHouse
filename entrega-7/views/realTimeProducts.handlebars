<header>
  <nav class="p-3 mb-2 bg-success text-white">
    <div class="container-fluid">
      <p class="fs-1 text-center">
        Lista de productos
      </p>
    </div>
  </nav>
</header>
<main>
  <section id="cards" class="container-fluid row text-center"></section>
  <section id="" class="container-sm row text-center mt-5">
    <div class="input-group mb-3">
      <input
        type="text"
        required
        id="title"
        class="form-control"
        placeholder="Nombre del producto"
        aria-label="Nombre del producto"
      />
      <span class="input-group-text"></span>
      <input
        type="text"
        required
        id="description"
        class="form-control"
        placeholder="Descripcion"
        aria-label="Descripcion"
      />
      <input
        type="text"
        required
        id="price"
        class="form-control"
        placeholder="Precio"
        aria-label="Precio"
      />
    </div>

    <div class="input-group mb-3">
      <input
        type="text"
        required
        id="code"
        class="form-control"
        placeholder="Code"
        aria-label="Code"
      />
      <span class="input-group-text"></span>
      <input
        type="text"
        required
        id="status"
        class="form-control"
        placeholder="Status"
        aria-label="Status"
      />
      <input
        type="text"
        required
        id="stock"
        class="form-control"
        placeholder="Stock"
        aria-label="Stock"
      />
      <span class="input-group-text"></span>
      <input
        type="text"
        required
        id="category"
        class="form-control"
        placeholder="Categoria"
        aria-label="Categoria"
      />
      <button id="send" class="btn btn-primary" onclick="sendProduct()">Agregar
        Producto</button>
    </div>
  </section>

  
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>